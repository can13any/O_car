<!DOCTYPE html>
<html>
<head>
<title><%= title %></title>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

</head>
<body>
        <% if (messages.error) { %>
        <p style="color:red"><%- messages.error %></p>
        <% } %>
        <% if (messages.success) { %>
        <p style="color:green"><%- messages.success %></p>
        <% } %>
        <form action="/auth/post-register" method="post" name="form1" onsubmit="return onWriteSubmit()">
            <div class="form-group">
                <label for="exampleInputEmail1">이름</label>
                <input type="text" name="userName" class="form-control" id="userName" aria-describedby="nameHelp" placeholder="이름을 입력해하세요" value="">
            </div>   
            <div class="form-group">
                <label for="exampleInputEmail1">아이디</label>
                <input type="text" name="userID" class="form-control" id="userID" aria-describedby="nameHelp" placeholder="아이디를 입력하세요" value="">
            </div> 
            <div class="form-group">
               <label for="exampleInputEmail1">비밀번호</label>
               <input type="password" name="password" class="form-control" id="password" aria-describedby="emailHelp" placeholder="*********" value="">
           </div>
            <div class="form-group">
            <label for="exampleInputEmail1">비밀번호 확인</label>
            <input type="password" name="password1" class="form-control" id="password1" aria-describedby="emailHelp" placeholder="*********" value="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">이메일</label>
                <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="이메일을 입력하세요" value="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">주소</label>
                <input type="text" name="address" class="form-control" id="address" aria-describedby="emailHelp" placeholder="주소를 입력하세요" value="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">전화번호</label>
                <input type="text" name="phoneNum" class="form-control" id="phoneNum" aria-describedby="emailHelp" placeholder="전회번호를 입력하세" value="">
            </div>
                <input type="submit" class="btn btn-primary" value="가입하기">
                <a href="/auth/login" class="btn btn-success ml-2">로그인</a>
        </form>
        
<script>
     function onWriteSubmit(){
        if($("#userName").val().trim()=="")
                {
                    $("#userName").val("");
                    $("#userName").focus();
                    alert("이름을 꼭 입력해 주세요");
                    return false;
                }
                if($("#userID").val().trim()=="")
                {
                    $("#userID").val("");
                    $("#userID").focus();
                    alert("아이디를 꼭 입력해 주세요");
                    return false;
                }
                if($("#email").val().trim()=="")
                {
                    $("#email").val("");
                    $("#email").focus();
                    alert("이메일을 꼭 입력해 주세요");
                    return false;
                }
                if($("#address").val().trim()=="")
                {
                    $("#address").val("");
                    $("#address").focus();
                    alert("주소를 꼭 입력해 주세요");
                    return false;
                }
                if($("#password").val().trim()=="")
                {
                    $("#password").val("");
                    $("#password").focus();
                    alert("새 비밀번호를 꼭 입력해 주세요");
                    return false;
                }
                if($("#password").val().trim() != $("#password1").val().trim())
                {
                    $("#password").val("");
                    $("#password").focus();
                    alert("새 비밀번호를 다시 입력해 주세요");
                    return false;
                }
                if($("#phoneNum").val().trim()=="")
                {
                    $("#phoneNum").val("");
                    $("#phoneNum").focus();
                    alert("전화번호를 꼭 입력해 주세요");
                    return false;
                }
                if(isNaN($("#phoneNum").val().trim()))
                {
                    $("#phoneNum").val();
                    $("#phoneNum").focus();
                    alert("전화번호는 숫자만 입력하세요");
                    return false;
                }
     }
</script>
</body>
</html>